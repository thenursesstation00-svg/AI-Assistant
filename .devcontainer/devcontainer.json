{
  "name": "AI-Assistant Dev Container",
  "build": {
    "dockerfile": "Dockerfile"
  },
  // Replace the value only for local testing; in Codespaces set a repository secret instead.
  "containerEnv": {
    "GITHUB_COPILOT_CLIENT_ID": "your_client_id_here"
  },
  "forwardPorts": [3000, 5173],
  "postCreateCommand": "npm install --prefix backend && npm install --prefix frontend"
}
